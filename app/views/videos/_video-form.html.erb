<%= simple_form_for(video) do |f| %>
  <%= f.input :url, as: :hidden, value: video.url %>
  <%= f.input :video_duration, as: :hidden, value: video.video_duration %>
  <%= f.input :thumbnail, as: :hidden, value: video.thumbnail %>
  <div class="inline-box">
    <div>
      <%= f.input :name, label: 'Titre de la vidéo', value: video.name %>
    </div>
    <div>
      <p><strong>Durée</strong></p>
      <p id="video_duration"></p>
    </div>
  </div>
  <%= f.input :description, value: video.description %>
  <label class="control-label string required"><abbr title="required">* </abbr>Intensité</label>
  <div class="form-inline inline-intensity">
    <%= f.collection_radio_buttons :intensity, [[1, 'Basse'],[2, 'Moyenne'], [3, 'Haute']], :first, :last %>
  </div>
  <label class="control-label string required"><abbr title="required">* </abbr>Zone du corps</label>
  <div class="form-inline inline-zone">
    <%= f.collection_check_boxes :tag_list, [['fullbody', 'Full body'],['cardio', 'Cardio'], ['legs', 'Legs'], ['core', 'Core'], ['arms', 'Arms'], ['stretching', 'Streching']], :first, :last %>
  </div>

  <%= f.button :submit,  "C'est parti", class: "btn btn-primary btn-form"%>
<% end %>
